@model DojoSurvey.Models.Survey 


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dojo Survey</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

</head>
<body>

    <div class="container text-center border border-success">
        <br>
        <h4>Dojo Survey</h4>
        <hr>
        <form asp-action="Submit" asp-controller="Home" method="post">
            <p class="text-danger"><span asp-validation-for="Name"></span></p>
            <label asp-for="Name"></label>
            <p><input asp-for="Name"></p>
            <p class="text-danger"><span asp-validation-for="Location"></span></p>
            <label asp-for="Location"></label>
            <p>
                <select asp-for="Location">
                    <option value="Korea">Korea</option>
                    <option value="China">China</option>
                    <option value="Vietnam">Vietnam</option>
                    <option value="Cambodia">Cambodia</option>
                </select>
            </p>
        <p class="text-danger"><span asp-validation-for="Language"></span></p>
        <label asp-for="Language"></label>
        <p>            
             <select asp-for="Language">
                    <option value="C#">C#</option>
                    <option value="Python">Python</option>
                    <option value="Javascript">Javascript</option>
                    <option value="Typescript">Typescript</option>
                    </select>
        </p>

        <p class="text-danger"><span asp-validation-for="Comment"></span></p>
        <label asp-for="Comment"></label>
        <br>
        <textarea asp-for="Comment" rows="4" cols="50">
        </textarea>
        <br>
        <button>Submit</button>
        
    </form>

    </div>

    
</body>
</html>