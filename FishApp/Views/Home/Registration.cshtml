@model User
@{
    ViewData["Title"] = "FishON | Registration";
}

<header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FishON!</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/registration">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

<div class="regbg jumbotron text-center">
    
    <div class="row">
        <div class="col"></div>
        <div class="regdiv border border-dark col">
            <h3>Register</h3>
            <form asp-action="Register" asp-controller="Home" method="POST">
                <p class="text-danger"><span asp-validation-for="FirstName"></span></p>
                <label asp-for="FirstName"></label>
                <p><input asp-for="FirstName"></p>
                <p class="text-danger"><span asp-validation-for="LastName"></span></p>
                <label asp-for="LastName"></label>
                <p><input asp-for="LastName"></p>
                <p class="text-danger"><span asp-validation-for="Email"></span></p>
                <label asp-for="Email"></label>
                <p><input asp-for="Email"></p>
                <p class="text-danger"><span asp-validation-for="Password"></span></p>
                <label asp-for="Password"></label>
                <p><input asp-for="Password"></p>
                <p class="text-danger"><span asp-validation-for="Confirm"></span></p>
                <label asp-for="Confirm"></label>
                <p><input asp-for="Confirm"></p>
                <button>Register</button>
            </form>
        </div>
        <div class="col"></div>
    </div>
    
</div>