<div class="container-fluid">
<header>        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <h3>FishON!</h3> 
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/logout"><button> Logout</button></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


</header> 

    <div class="container">
        <div class="row">
            <div class="col"></div>
            <div class=" col-6">
            @{
                foreach(var c in @ViewBag.CatchList)
                {
                    <span><b>@c.Creator.FirstName</b> caught a <b class="text-info">@c.Species</b> at <b class="text-success">@c.Location</b></span>
                    
                    <img style="width: 100%; height: 280px;" src="/images/@c.Img"  alt="Catch Image">
                    @if(@ViewBag.Id == @c.UserId)
                    {
                        <br>
                    }
                    else
                    {
                        if(@c.Likers.Count == 0)
                        {
                            <a href="/like/@c.CatchId"> <img class="likebtn" src="https://freeiconshop.com/wp-content/uploads/edd/heart-outline.png"></a>
                        }
                        else
                        {
                            int count = 0;
                            @foreach(var like in @c.Likers)
                            {
                                if(like.User == @ViewBag.CurrentUser)
                                {
                                    count = 1;
                                }
                            }
                            if(count == 1)
                            {
                                <a href="/unlike/@c.CatchId"><img class="likebtn" src="https://www.pinclipart.com/picdir/middle/67-671779_cute-pictures-of-hearts-cute-heart-free-images.png"></a>
                            }
                            else
                            {
                                <a href="/like/@c.CatchId"> <img class="likebtn" src="https://freeiconshop.com/wp-content/uploads/edd/heart-outline.png"></a>
                            }
                        }
                    }


                    <p>@c.Likers.Count Likes</p>
                    <p>@c.Description</p>
                    <hr>
                }
            }
        </div>
            <div class="col"></div>
        </div>
        
        
    </div>



 <footer class=" navbar-fixed-bottom border-top footer text-center">
        <div class="row">
            <div class="col text-right">
                <a href="/allposts"><img class="imglink" src="https://cdn.pixabay.com/photo/2018/05/21/12/36/clipart-3418130_960_720.png" alt="View All Posts Image Link"></a>
            </div>
            <div class="col-1 text-center">
                <a href="/dashboard"><img class="imglink" src="https://image.flaticon.com/icons/svg/56/56494.svg" alt="Log Catch Image Link"></a>
            </div>
            <div class="col text-left">
                <a href="/addpost"><img class="imglink" src="https://image.flaticon.com/icons/svg/60/60745.svg" alt="Log Catch Image Link"></a>
            </div>
        </div>
    </footer>
</div>